{
  "extends": ["next/core-web-vitals", "airbnb-base", "prettier"],
  "rules": {
    "no-unused-vars": "warn",
    "import/extensions": "off"
  },
  "overrides": [
    {
      "files": "**/*.+(ts|tsx|js|jsx)",
      "extends": ["plugin:prettier/recommended"],
      "rules": {
        "import/prefer-default-export": "off",
        "import/no-named-default": "off",
        "func-names": "off",
        "prettier/prettier": [
          "warn",
          { "usePrettierrc": true, "endOfLine": "auto" }
        ]
      }
    }
  ]
}
